@model Patient

<partial name="_BreadCrumbs" model=@(new [] {
    ("/","Home"),
    ("/patient","Patients"),
    ($"/student/details/{Model.Id}",$"{Model.Id}"),
    ("","Edit")
}) />

<div class="card rounded shadow p-4">

    <h3>Edit Profile</h3>

     <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- hide the id as its not user editable but needs to be in the -->
        <!-- form to ensure the student passed to the controller is complete -->    
        <input type="hidden" asp-for="Id" class="form-control"/>

        <!-- title -->
        <div class="mt-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control"/>
            <span  asp-validation-for="Title" class="text-danger"></span>
        </div>
    
        <!-- firstname -->
        <div class="mt-3">
            <label asp-for="FirstName" class="form-label"></label>
            <input asp-for="FirstName" class="form-control"/>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <!-- middlename -->
        <div class="mt-3">
            <label asp-for="MiddleName" class="form-label"></label>
            <input asp-for="MiddleName" class="form-control"/>
            <span asp-validation-for="MiddleName" class="text-danger"></span>
        </div>

        <!-- surname -->
        <div class="mt-3">
            <label asp-for="Surname" class="form-label"></label>
            <input asp-for="Surname" class="form-control"/>
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>

        <!-- dob and phoneNo input groups in single row -->      
        <div class="row mt-3">
            <div class="col">
                <label asp-for="Dob" class="form-label"></label>
                <input asp-for="Dob" class="form-control"/>
                <span asp-validation-for="Dob" class="text-danger"></span>
            </div>

            <!-- phoneNo -->
            <div class="col">
                <label asp-for="PhoneNo" class="form-label"></label>
                <input asp-for="PhoneNo" class="form-control"/>
                <span  asp-validation-for="PhoneNo" class="text-danger"></span>
            </div>
        </div>


         <!-- sex and houseNo input groups in single row -->      
        <div class="row mt-3">
            <div class="col">
                <label asp-for="Sex" class="form-label"></label>
                <input asp-for="Sex" class="form-control"/>
                <span asp-validation-for="Sex" class="text-danger"></span>
            </div>

            <!-- houseNo -->
            <div class="col">
                <label asp-for="HouseNo" class="form-label"></label>
                <input asp-for="HouseNo" class="form-control"/>
                <span  asp-validation-for="HouseNo" class="text-danger"></span>
            </div>
        </div>

        <!-- streetname -->
        <div class="mt-3">
            <label asp-for="StreetName" class="form-label"></label>
            <input asp-for="StreetName" class="form-control"/>
            <span asp-validation-for="StreetName" class="text-danger"></span>
        </div>

        <!-- city -->
        <div class="mt-3">
            <label asp-for="City" class="form-label"></label>
            <input asp-for="City" class="form-control"/>
            <span asp-validation-for="City" class="text-danger"></span>
        </div>

        <!-- postcode -->
        <div class="mt-3">
            <label asp-for="Postcode" class="form-label"></label>
            <input asp-for="Postcode" class="form-control"/>
            <span asp-validation-for="Postcode" class="text-danger"></span>
        </div>

        <!-- ethnicity -->
        <div class="mt-3">
            <label asp-for="Ethnicity" class="form-label"></label>
            <input asp-for="Ethnicity" class="form-control"/>
            <span asp-validation-for="Ethnicity" class="text-danger"></span>
        </div>

        <!-- NIN -->
        <div class="mt-3">
            <label asp-for="NIN" class="form-label"></label>
            <input asp-for="NIN" class="form-control"/>
            <span asp-validation-for="NIN" class="text-danger"></span>
        </div>

        <!-- Email -->
        <div class="mt-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" class="form-control"/>
            <span  asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mt-3">           
            <button type="submit" class="btn btn-primary" aria-label="save">Save</button>            
            <a class="btn btn-secondary" asp-action="Details" asp-route-id="@Model.Id" aria-label="cancel" >Cancel</a>
        </div>

    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}