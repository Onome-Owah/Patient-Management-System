@model IssueCreateViewModel

<partial name="_BreadCrumbs" model=@(new [] {
    ("/","Home"),
    ($"/issue/index","Issues"),
    ("","Create Issue")
}) />

<div class="card rounded shadow p-4">
    <h3>Create Issue</h3>
    <form asp-action="Create">
       
        <!-- form includes a select list to populate the studentid -->
        <!-- and a text area to include the issue -->

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mt-3">
            <label asp-for="PatientId" class="form-label"></label>      
            <select asp-for="PatientId" class="form-control" asp-items="@Model.Patients">
                <option disabled selected>Select Patient</option>
            </select>
            <span asp-validation-for="PatientId" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="CurrentConcern" class="form-label"></label>      
            <textarea rows="5" asp-for="CurrentConcern" class="form-control"></textarea>
            <span asp-validation-for="CurrentConcern" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="Length" class="form-label"></label>      
            <input asp-for="Length" class="form-control"/>
            <span asp-validation-for="Length" class="text-danger"></span>
        </div>
    
       <div class="mt-3">
            <label asp-for="Severity" class="form-label"></label>      
            <input asp-for="Severity" class="form-control"/>
            <span asp-validation-for="Severity" class="text-danger"></span>
        </div>

         <!-- Photo -->
         <div class="col-4">
            @if (Model.PhotoUrl?.Length > 0)
            {
                <img src="@Model.PhotoUrl" class="img-fluid" alt="Issue photo">
            } else {
                <span class="text-info">No photo available</span>
            }
        </div> 

        <div class="mt-3">
            <label asp-for="Sensitivities" class="form-label"></label>      
            <input asp-for="Sensitivities" class="form-control"/>
            <span asp-validation-for="Sensitivities" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="WhichMedication" class="form-label"></label>      
            <textarea rows="5" asp-for="WhichMedication" class="form-control"></textarea>
            <span asp-validation-for="WhichMedication" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="Allergies" class="form-label"></label>      
            <input asp-for="Allergies" class="form-control"/>
            <span asp-validation-for="Allergies" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="WhichAllergies" class="form-label"></label>      
            <textarea rows="5" asp-for="WhichAllergies" class="form-control"></textarea>
            <span asp-validation-for="WhichAllergies" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="Contraceptions" class="form-label"></label>      
            <input asp-for="Contraceptions" class="form-control"/>
            <span asp-validation-for="Contraceptions" class="text-danger"></span>
        </div>

        
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}